
<%= simple_form_for(@oenologist) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :country %>
    
  </div>

  <h3>Work</h3>
  <div id="works">
    <%= f.simple_fields_for :works do |work| %>
    <%= render 'works_fields', f, work %>
  <%end %>
  <div class="link">
    <%= link_to_add_association 'Add magazines and job', f, :works, partial: 'works_fields'  %>
  </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
