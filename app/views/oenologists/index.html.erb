<p id="notice"><%= notice %></p>

<h1>Oenologists</h1>

<table>
  <thead>
    <tr class="text-center">
      <th>Name</th>
      <th>Age</th>
      <th>Country</th>
      <th>Work</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oenologists.each do |oenologist| %>
      <tr>
        <td><%= oenologist.name %></td>
        <td><%= oenologist.age %></td>
        <td><%= oenologist.country %></td>
        <td><ul>
          <% oenologist.jobs.each do |job| %>
          <li><%= job.magazine.name %></li>
        <%end %>
        </ul></td>
        <td><%= link_to 'Show', oenologist %></td>
        <td><%= link_to 'Edit', edit_oenologist_path(oenologist) %></td>
        <td><%= link_to 'Destroy', oenologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

