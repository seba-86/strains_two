<%= simple_form_for(@wine) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
    <%= f.input :name %>
</div>

<h3>Cepas</h3>

<div id="assemblies">
    <%= f.simple_fields_for :assemblies do |assembly| %>
    <%= render 'assembly_fields', f: assembly %>
    <%end %>

    <div class="links">
        <%= link_to_add_association 'Agregar cepas', f, :assemblies %>
    </div>
</div>

<h3>Notes</h3>
<div id="evaluations">
    <%= f.simple_fields_for :evaluations do |evaluation| %>
    <%= render 'evaluation_fields', f: evaluation %>
    <% end %>

    <div class="links">
        <%= link_to_add_association 'Agregar Note', f, :evaluations, partial: 'evaluation_fields' %>
    </div>
</div>

<div class="form-actions">
    <%= f.button :submit %>
</div>
<% end %>